/**
el-select 
*/
.system {
    background-color: rgba(93, 93, 93, 0.8);
}
.system
    .el-select-dropdown.is-multiple
    .el-select-dropdown__item.selected.hover,
.system .el-select-dropdown__item.hover,
.system .el-select-dropdown__item:hover {
    color: blue !important;
    background-color: rgba(93, 93, 93, 0.8) !important;
}
.system .el-select-dropdown {
    background-color: rgba(93, 93, 93, 0.8) !important;
}
.system .el-select-dropdown__item {
    background-color: rgba(93, 93, 93, 0.8) !important;
    color: #fff !important;
    height: 24px !important;
    /* line-height: 24px; */
    padding: 0 !important;
}
.system .el-select-dropdown__item span {
    display: inline-block !important;
}
.system .el-input__inner {
    background-color: rgba(93, 93, 93, 0.1) !important;
    color: #fff !important;
}
.system .el-select-dropdown__item.selected {
    background-color: rgba(93, 93, 93, 0.8) !important;
}
.system .el-select-dropdown__item.selected.hover {
    background-color: rgba(93, 93, 93, 0.8) !important;
}

.stop {
    color: red;
}
.running {
    color: #00ff00;
}
