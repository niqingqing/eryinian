#content {
    position: absolute;
    overflow: hidden;
    width: 100%;
    height: 100%;
    transition: 1s;
}
#slide {
    width: 300px;
    min-width: 300px;
    height: 100%;
    position: absolute;
    background-color: #3d3d3d;
    box-shadow: 5px 0 20px 0 rgba(0, 0, 0, 0.4);
    opacity: 0.85;
    font-size: 12px;
    color: #fff;
}
.slide-show {
    transition: 800ms;
    left: 0px;
}
.slide-hide {
    transition: 500ms;
    left: -240px;
}
#slide .el-table {
    background-color: rgba(93, 93, 93, 0.1);
    /* opacity: 0.01; */
    color: #fff;
}
#slide .el-table tr,
#slide .el-table td,
#slide .el-table th,
#slide .cell {
    background-color: rgba(93, 93, 93, 0.1) !important;
    /* border: none !important; */
    color: #fff !important;
    height: 24px !important;
    line-height: 24px !important;
    text-align: center;
    padding: 0 !important;
}
.el-select {
    width: 100%;
}
#slide .el-button {
    width: 100%;
}
.btn {
    width: 100%;
    padding: 0;
    margin: 0;
    height: 16px;
    line-height: 13px !important;
    text-align: center;
}
.margin-top-20 {
    margin-top: 20px;
}
.margin-top-100 {
    margin-top: 100px;
}
.tableRow {
    color: red;
    height: 10px;
}
.input-prepend {
    height: 100%;
    line-height: 36px;
    text-align: center;
}
::-webkit-scrollbar {
    width: 1px;
}
::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}
::-webkit-scrollbar-thumb {
    background: gray;
    border-radius: 3px;
}

