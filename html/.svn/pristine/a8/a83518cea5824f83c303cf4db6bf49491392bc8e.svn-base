html,body,div,h1,h2,h3,h4,ul,dl,ol,li,p {
    margin: 0;
    padding: 0;
}
body {
    font-size: 16px;
}
li {
    list-style: none;
}
a {
    text-decoration: none;
}
h1 {
    width: 100%;
    text-align: center;
    font-size: 1.5em;
}

/*html::-webkit-scrollbar {*/
    /*width: 3px;*/
/*}*/
.content {
    width: 100%;
}
.content>div {
    float: left;
}
.content_menu {
    width: 25%;
    min-height: 300px;
}
.content_menu_wrap {
    width: 25%;
    min-height: 300px;
    max-height: 800px;
    overflow: scroll;
    position: fixed;
    top: 0;
    left: 0;
    bottom:20px;
}
.content_menu_wrap::-webkit-scrollbar {
    width: 3px;
}
.content_desc {
    width: 75%;
    /*max-height: 800px;*/
    /*overflow: scroll;*/
    /*min-height: 300px;*/
    /*background: yellow;*/
}

.module {
    padding: 10px 20px;
    width: 100%;
}
.api_content{
    padding: 5px 30px;
    margin: 10px 0;
    width: 100%;
    /*border: 1px solid #ccc;*/
}
.specal_desc {
    padding: 0 0 0 30px;
    color: red;
}
.other_desc {
    padding: 0 0 0 30px;
    text-indent: 30px;
}
table {
    width: 100%;
}
table,tr,th,td {
    border: 1px solid #ccc;
}
.request>tr {
    height: 30px;
}
th {
    font-weight: 700;
    height: 30px;
    text-align: center;
    vertical-align: center;
    padding: 3px;
}
td {
    text-align: center;
    vertical-align: center;
    padding: 3px;
}
.request tr td{
    width: 20%;
}
.request tr td:nth-child(2){
    width: 40%;
}

.response tr td{
    width: 20%;
}
.response tr td:nth-child(2){
    width: 80%;
}
.remark_desc tr td {
    width: 20%;
}
.remark_desc tr td:nth-child(2) {
    width: 80% !important;
}
.desc_item {
    text-align: left;
}
.response_model_title {
    margin: 0 0 0 -2em;
}
.res_item tr td:first-child,.res_item tr th:first-child{
    width: 20%;
}
.res_item tr td:last-child,.res_item tr th:last-child{
    width: 80%;
}
.note {
    margin: 0 0 0 30px;
}
.note_desc pre code{
    text-align: left;
}